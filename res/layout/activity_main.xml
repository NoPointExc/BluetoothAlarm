<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- switch listener- -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_listener" />

        <Switch
            android:id="@+id/switch_listener"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <!-- switch 1;switch2- -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sensor1_ok" />

            <Switch
                android:id="@+id/switch_sensor_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onSwitchClick" />

            <TextView
                
                android:id="@+id/textView_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sensor2_ok" />

            <Switch
                android:id="@+id/switch_sensor_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onSwitchClick"
                 />
        </LinearLayout>

        <!-- switch 3;switch4- -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                
                android:id="@+id/textView_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sensor3_ok" />

            <Switch
                android:id="@+id/switch_sensor_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:onClick="onSwitchClick"
                />

            <TextView
                
                android:id="@+id/textView_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sensor4_ok" />

            <Switch
                android:id="@+id/switch_sensor_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:onClick="onSwitchClick"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>